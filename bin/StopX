#! /bin/bash

#		StopX
# Se asegura de detener un proceso que se esté ejecutando
# y de dar error si el proceso no estaba ejecutándose.

proceso=$1
pid="`ps ax | grep -v grep | grep ${proceso} | sed -r 's/^\s+(\S+)\s.*$/\1/'`"

if [ "${pid}x" != x ]; then
	kill $pid
else
	echo "Error: El proceso "$proceso" no se está ejecutando."
	exit 1
fi
exit 0
